<% if current_user.has_role? ROLE_ADMIN %>

	<h2>Nueva empresa</h2>

	<%= form_tag( "../enterprises/resultado", method: "post", multipart: true) do %>

	<div style="width:100%;height:340px;">
		<div style="width:45%;float:left;">
			<p>Nombre de la empresa:</p>
			<div class="input-group">
				<input type="text" class="form-control" name="nombre" style="width:350px;">
			</div>
			<br></br>
			<p>Descripción de la empresa:</p>
			<div class="input-group">
				<textarea rows="8" cols="44" class="form-control" name="desc" style="resize:none;"></textarea>
			</div>
		</div>

		<div style="width:10%;float:left;">
		</div>

		<div style="width:45%;float:left;">
			<p>Logo de la empresa:</p>
			<div class="input-group">
				<input type="file" class="form-control" name="logo">
			</div>
		</div>
	</div>



	<div class="btn-group">
		<button type="submit" class="btn btn-default" >Guardar</button>
	</div>


<% end %>

<% else %>

	<div class="alert alert-danger">
		No tiene autorización para acceder a este recurso.
	</div>

	<div class="btn-group">
	  <button type="button" class="btn btn-default" onclick="location.href='../inicio/inicio'">Inicio</button>
	</div>

<% end %>
