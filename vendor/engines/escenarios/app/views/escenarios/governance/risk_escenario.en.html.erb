      '</div>';

      // Add it right after the original risk div:
      $(html).insertAfter("#div"+idRiesgo);
    };

  });

  // Selection of a cell from the risk level map:
   $(".riskmap").click(function(){
    
    // Remove the previous borders:
    var id = this.id;
    var value = $("#"+id).text();
    $(".riskmap").css({'border-color': 'white',
     'border-width': '1px',
